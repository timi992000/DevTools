<UserControl x:Class="DevTools.Views.Formatter.DevJsonFormatterTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DevTools.Views.Formatter"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0"
                 Text="{Binding TextToFormat, Mode=TwoWay}"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 TextChanged="__TextChanged"
                 VerticalScrollBarVisibility="Auto" />

        <TextBox Grid.Column="1"
                 Text="{Binding ConvertedText}"
                 Margin="10 0 0 0"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Foreground="{Binding Foreground}"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"/>

    </Grid>
</UserControl>
