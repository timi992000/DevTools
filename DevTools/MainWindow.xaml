  <mah:MetroWindow.Flyouts>
    <mah:FlyoutsControl>
      <mah:Flyout Header="Configuration"
                  IsOpen="{Binding ConfigurationOpen, Mode=TwoWay}"
                  Position="Right">
        <views:MainWindowFlyoutContentView />
      </mah:Flyout>
    </mah:FlyoutsControl>
  </mah:MetroWindow.Flyouts>
</mah:MetroWindow>
